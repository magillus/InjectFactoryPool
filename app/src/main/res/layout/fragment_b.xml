<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#e0ffaaaa"
              android:orientation="vertical"
              tools:context="com.matsdevelopsolutions.injectfactorypool.FragmentA">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:text="TEXT 16sp"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left"
        android:text="TEST LEFT"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/hello_blank_fragment"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#000"
        android:text="Text white default size"
        android:textColor="#fff0f0"/>

    <ToggleButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toggle 20sp"
        android:textOff="DISABLE"
        android:textOn="ENABLE"
        android:textSize="20sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#580fffff"
        android:text="24sp test blue"
        android:textColor="#000ff0"
        android:textSize="24sp"/>


</LinearLayout>
